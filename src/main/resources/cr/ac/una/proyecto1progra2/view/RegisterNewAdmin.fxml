<AnchorPane prefWidth="800.0" prefHeight="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.proyecto1progra2.controller.RegisterNewAdminController">

    <children>
        <VBox alignment="CENTER" spacing="15" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <children>
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Button fx:id="btnRegresar" onAction="#onActionBtnRegresar" text="Regresar" />
                        <Label text="Registrar Administrador">
                            <font>
                                <Font name="System" size="24" />
                            </font>
                            <style>-fx-font-style:italic;</style>
                        </Label>
                    </children>
                </HBox>

                <GridPane hgap="10" vgap="10">
                    <padding>
                        <Insets bottom="10" left="20" right="20" top="10" />
                    </padding>
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" percentWidth="30" />
                        <ColumnConstraints percentWidth="70" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints percentHeight="16.6" />
                        <RowConstraints percentHeight="16.6" />
                        <RowConstraints percentHeight="16.6" />
                        <RowConstraints percentHeight="16.6" />
                        <RowConstraints percentHeight="16.6" />
                        <RowConstraints percentHeight="16.6" />
                    </rowConstraints>
                    <children>
                        <Label text="Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="txtUsername" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="E-mail:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="ContraseÃ±a:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <PasswordField fx:id="txtPassword" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Confirmar:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <PasswordField fx:id="txtPasswordConfirm" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label text="Apellido:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <TextField fx:id="txtLastName" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    </children>
                </GridPane>

                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <children>
                        <Button fx:id="btnCrearCuenta" onAction="#onActionBtnCrearCuenta" text="Crear" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
