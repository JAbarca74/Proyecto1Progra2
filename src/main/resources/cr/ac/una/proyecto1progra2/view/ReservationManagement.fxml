<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="1000" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.proyecto1progra2.controller.ReservationManagementController">

    <HBox spacing="20" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">

        
        <VBox prefWidth="300" spacing="10" styleClass="calendar-pane">
            <HBox alignment="CENTER" spacing="10">
                <Button onAction="#onPrevMonth" text="‹">
                    <HBox.margin><Insets right="25" /></HBox.margin>
                </Button>
                <Label fx:id="lblMonthYear" style="-fx-font-size:16; -fx-font-weight:bold;" />
                <Button onAction="#onNextMonth" text="›">
                    <HBox.margin><Insets right="25" /></HBox.margin>
                </Button>
            <VBox.margin>
               <Insets right="25.0" top="160.0" />
            </VBox.margin>
            </HBox>

            <GridPane fx:id="calendarGrid" hgap="5" styleClass="calendar-grid" vgap="5">
                
                <Label text="L" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label text="M" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="X" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <Label text="J" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                <Label text="V" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                <Label text="S" GridPane.columnIndex="5" GridPane.rowIndex="0" />
                <Label text="D" GridPane.columnIndex="6" GridPane.rowIndex="0" />

                <columnConstraints>
                    <ColumnConstraints />
                    <ColumnConstraints />
                    <ColumnConstraints />
                    <ColumnConstraints />
                    <ColumnConstraints />
                    <ColumnConstraints />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                </rowConstraints>
                <VBox.margin><Insets left="20.0" /></VBox.margin>
            </GridPane>
        </VBox>

        
        <VBox prefHeight="493.0" prefWidth="623.0" spacing="10" HBox.hgrow="ALWAYS">
            <HBox spacing="10" styleClass="calendar-pane">
                <Label text="Usuario:" />
                <ComboBox fx:id="comboUsuarios" prefWidth="150" />
                <Label text="Piso:" />
                <ComboBox fx:id="comboPiso" prefWidth="80" />
                <Button onAction="#onBuscar" text="Buscar" />
                <Button onAction="#onLimpiar" text="Limpiar" />
                <VBox.margin><Insets top="35" /></VBox.margin>
            </HBox>
            <TableView fx:id="tablaReservas" prefHeight="510" prefWidth="592" styleClass="calendar-pane" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colUsuario" prefWidth="120" text="Usuario" />
                    <TableColumn fx:id="colEspacio" prefWidth="120" text="Espacio" />
                    <TableColumn fx:id="colPiso" prefWidth="60" text="Piso" />
                    <TableColumn fx:id="colFecha" prefWidth="100" text="Fecha" />
                    <TableColumn fx:id="colInicio" prefWidth="80" text="Inicio" />
                    <TableColumn fx:id="colFin" prefWidth="80" text="Fin" />
                    <TableColumn fx:id="colEstado" prefWidth="80" text="Estado" />
                    <TableColumn fx:id="colAcciones"
             minWidth="140"
             prefWidth="140"
             maxWidth="140"
             resizable="false"
             text="Acciones"/>

                </columns>
                <VBox.margin><Insets bottom="30" right="40" /></VBox.margin>
            </TableView>
         <HBox.margin>
            <Insets top="50.0" />
         </HBox.margin>
        </VBox>

    </HBox>
</AnchorPane>
