<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cr.ac.una.proyecto1progra2.controller.UserManagerController"
            prefWidth="600" prefHeight="400">

  <!-- Barra de herramientas -->
  <top>
    <ToolBar>
      <Button text="Nuevo"    onAction="#onNuevo"/>
      <Button text="Guardar"  onAction="#onGuardar"/>
      <Button text="Eliminar" onAction="#onEliminar"/>
    </ToolBar>
  </top>

  <!-- Tabla + formulario -->
  <center>
    <SplitPane orientation="VERTICAL">
      <!-- Tabla de usuarios -->
      <TableView fx:id="tblUsuarios" prefHeight="200">
        <columns>
          <TableColumn fx:id="colId"     text="ID"      prefWidth="50"/>
          <TableColumn fx:id="colNombre" text="Nombre"  prefWidth="150"/>
          <TableColumn fx:id="colCorreo" text="Correo"  prefWidth="150"/>
          <TableColumn fx:id="colRol"    text="Rol"     prefWidth="75"/>
          <TableColumn fx:id="colEstado" text="Activo?" prefWidth="75"/>
        </columns>
      </TableView>

      <!-- Formulario de ediciÃ³n -->
      <GridPane hgap="10" vgap="10" padding="10">
        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Correo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCorreo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Rol:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ChoiceBox fx:id="cbRol" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Activo:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <CheckBox fx:id="chkActivo" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
      </GridPane>
    </SplitPane>
  </center>
</BorderPane>
