<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cr.ac.una.proyecto1progra2.controller.AboutUsController"
            stylesheets="@styles.css">

    <!-- Botón Volver arriba a la izquierda -->
    <top>
        <HBox alignment="CENTER_LEFT">
            <padding><Insets top="15" left="15" /></padding>
            <Button fx:id="btnVolver" text="← Volver" onAction="#onActionBtnVolver" styleClass="boton-menu-activo" />
        </HBox>
    </top>

    <!-- Contenido principal en el centro -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="18.0">
            <padding><Insets top="30" bottom="30" left="40" right="40"/></padding>

            <Label text="FlexSpace" style="-fx-font-size: 28px; -fx-text-fill: green; -fx-font-weight: bold;" />
            <Label text="Sistema de Reservas" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Label text="Versión 1.0.0" styleClass="texto-version" />

            <Label text="Esta aplicación fue desarrollada como parte del curso de Programación II en la Universidad Nacional. Su objetivo es facilitar la gestión de espacios de coworking mediante una interfaz amigable y moderna."
                   wrapText="true" maxWidth="480" styleClass="texto-parrafo" />

            <Label text="Misión" style="-fx-font-weight: bold;" styleClass="subtitulo" />
            <Label text="Brindar una solución eficiente y accesible para la administración de espacios de trabajo compartido, promoviendo la productividad y el orden institucional."
                   wrapText="true" maxWidth="480" styleClass="texto-parrafo" />

            <Label text="Visión" style="-fx-font-weight: bold;" styleClass="subtitulo" />
            <Label text="Ser una herramienta referencial para la reserva de espacios a nivel universitario, impulsando la transformación digital en los entornos académicos."
                   wrapText="true" maxWidth="480" styleClass="texto-parrafo" />

            <Label text="Valores" style="-fx-font-weight: bold;" styleClass="subtitulo" />
            <Label text="Responsabilidad, eficiencia, accesibilidad, respeto y mejora continua."
                   wrapText="true" maxWidth="480" styleClass="texto-parrafo" />

            <Label text="Autores" style="-fx-font-weight: bold;" styleClass="subtitulo" />
            <HBox alignment="CENTER" spacing="16">
                <Button fx:id="btnJefferson" text="Jefferson Abarca" onAction="#onActionBtnJefferson" styleClass="boton-link-verde" />
                <Button fx:id="btnHarold" text="Harold Avila" onAction="#onActionBtnHarold" styleClass="boton-link-verde" />
                <Button fx:id="btnCristhian" text="Cristhian Cordero" onAction="#onActionBtnCristhian" styleClass="boton-link-verde" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
