<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.proyecto1progra2.controller.EditUserController">
    <children>
        <VBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <children>
                <Label styleClass="titulo" text="Editar Usuario" />

                <TextField fx:id="txtNombre" promptText="Nombre" />
                <TextField fx:id="txtApellido" promptText="Apellido" />
                <TextField fx:id="txtUsername" promptText="Nombre de usuario" />
                <TextField fx:id="txtCorreo" promptText="Correo electrónico" />
                <TextField fx:id="txtNuevaPassword" promptText="Nueva contraseña" />
                <TextField fx:id="txtConfirmPassword" promptText="Confirmar contraseña" />

                <Button fx:id="btnEstado" onAction="#onCambiarEstado" text="Activo" style="-fx-background-color: green; -fx-text-fill: white;" />

                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <Button text="Guardar Cambios" onAction="#onGuardarCambios" />
                        <Button text="Volver" onAction="#onVolver" />
                        <Button text="Salir" onAction="#onSalir" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
