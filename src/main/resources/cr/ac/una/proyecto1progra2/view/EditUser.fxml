<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.proyecto1progra2.controller.EditUserController">
    <children>
        <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <children>

                <Label styleClass="titulo" text="Editar Persona" />

                <!-- Campo de ID agregado -->
                <TextField fx:id="txtId" editable="false" promptText="ID" />

                <TextField fx:id="txtNombre" />
<TextField fx:id="txtPassword" />
<Button onAction="#volver" text="Volver" />

                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <Button onAction="#onGuardarCambios" text="Guardar Cambios" />
                       
                    </children>
                </HBox>

            </children>
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
