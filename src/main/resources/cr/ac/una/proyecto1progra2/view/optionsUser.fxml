<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cr.ac.una.proyecto1progra2.controller.OptionsUserController">

   <children>
      <VBox AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0"
            AnchorPane.topAnchor="0.0">

         <HBox VBox.vgrow="ALWAYS">
            <children>
               <VBox spacing="15.0" HBox.hgrow="ALWAYS" prefWidth="180.0">
                  <children>
                     <ImageView fitHeight="46.0" fitWidth="167.0"
                                pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@Logo&Nombre.png" />
                        </image>
                     </ImageView>

                     <!-- Aquí ajustamos a los métodos que ya existen -->
                     <Button fx:id="btnBuscarEspacio"
                             onAction="#onActionBtnBuscarEspacio"
                             prefHeight="66.0" prefWidth="180.0"
                             text="Buscar espacio" />

                     <Button fx:id="btnRegresar"
                             onAction="#onActionBtnRegresar"
                             prefHeight="66.0" prefWidth="180.0"
                             text="Regresar" />

                     <Button fx:id="btnReservarEspacio"
                             onAction="#onActionBtnReservarEspacio"
                             prefHeight="66.0" prefWidth="180.0"
                             text="Reservar espacio" />
                  </children>
               </VBox>
            </children>
         </HBox>
      </VBox>
   </children>
</AnchorPane>
