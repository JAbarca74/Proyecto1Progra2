<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.proyecto1progra2.controller.InvoiceController">
   <content>
      <AnchorPane fx:id="rootPane" prefHeight="1200.0" prefWidth="800.0" stylesheets="@styles.css">
         <children>
            <VBox fx:id="mainContainer" layoutX="-1.6" prefHeight="1000.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 5);" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="-0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <StackPane fx:id="headerContainer" prefHeight="120.0">
                     <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                  </StackPane>
                  <VBox fx:id="detailsContainer" spacing="0.0" />
                  <HBox fx:id="footerContainer" alignment="CENTER" spacing="20.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 0 0 15 15;">
                     <children>
                        <Button fx:id="btnPrint" mnemonicParsing="false" onAction="#handlePrint" text="🖨️ Imprimir">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btnSave" mnemonicParsing="false" onAction="#handleSave" text="💾 Guardar" />
                        <Button fx:id="btnClose" mnemonicParsing="false" onAction="#handleClose" text="❌ Cerrar" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </content>
</ScrollPane>
