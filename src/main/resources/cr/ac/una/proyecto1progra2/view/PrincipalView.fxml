<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cr.ac.una.proyecto1progra2.controller.PrincipalViewController"
            stylesheets="@styles.css">

   <left>
      <VBox prefHeight="490.0" prefWidth="123.0" spacing="10" BorderPane.alignment="CENTER">
         <padding>
            <Insets top="30.0"/>
         </padding>
         <children>
            <Button fx:id="btnReservar" text="Reservaciones" onAction="#onActionBtnReservar"
                    prefHeight="36.0" prefWidth="122.0">
               <VBox.margin>
                  <Insets top="30.0" bottom="30.0"/>
               </VBox.margin>
            </Button>

            <Button fx:id="btnEditarUsuario" text="Editar Usuario" onAction="#onActionBtnEditarUsuario"
                    prefHeight="36.0" prefWidth="126.0" mnemonicParsing="false">
               <font>
                  <Font size="5.0"/>
               </font>
            </Button>

            <Button fx:id="btnAgregarUsuario" text="Agregar Usuario" onAction="#onRegisterNewAccount"
                    prefHeight="36.0" prefWidth="126.0"/>

            <Button fx:id="btnRegisterAdminAccount" text="Agregar Admin" onAction="#onRegisterAdminAccount"
                    prefHeight="36.0" prefWidth="126.0"/>

            <Button fx:id="btnSalir" text="Salir" onAction="#onActionBtnSalir"
                    prefHeight="36.0" prefWidth="127.0">
               <VBox.margin>
                  <Insets top="30.0"/>
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </left>

   <center>
      <VBox prefHeight="500.0" prefWidth="700.0" BorderPane.alignment="CENTER"/>
   </center>

</BorderPane>
