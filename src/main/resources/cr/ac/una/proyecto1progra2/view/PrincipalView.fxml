<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.proyecto1progra2.controller.PrincipalViewController">

    <center>
        <VBox alignment="TOP_RIGHT" prefHeight="500.0" prefWidth="587.0" BorderPane.alignment="CENTER_RIGHT">
            <!-- contenido central -->
        </VBox>
    </center>

    <left>
        <AnchorPane prefHeight="600.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>

                <!-- Menú de usuario -->
                <VBox fx:id="VBoxMenuUsuario" alignment="CENTER" prefHeight="600.0" prefWidth="200.0" styleClass="menu-lateral" visible="false" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                    <padding><Insets top="40" /></padding>
                    <children>
                        <ImageView fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true" styleClass="icono-transparente">
                            <image><Image url="@../controller/Images/usuario.png" /></image>
                        </ImageView>
                        <Text fill="WHITE" text="Bienvenido ">
                            <font><Font size="15" /></font>
                            <VBox.margin><Insets bottom="8" top="8" /></VBox.margin>
                        </Text>
                        <Line endX="100" startX="0" />
                        <Button fx:id="btnReservar" onAction="#onActionBtnReservar" prefWidth="160" styleClass="boton-menu" text="Reservaciones">
                            <VBox.margin><Insets top="30" /></VBox.margin>
                     <graphic>
                        <ImageView fitHeight="47.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../controller/Images/icons8-event-accepted-50.png" />
                           </image>
                        </ImageView>
                     </graphic>
                        </Button>
                        <Button fx:id="btnMiniJuego" onAction="#onActionMiniJuego" prefWidth="160" styleClass="boton-menu" text="Mini Juego">
                            <VBox.margin><Insets top="10" /></VBox.margin>
                     <graphic>
                        <ImageView fitHeight="43.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../controller/Images/icons8-game-50.png" />
                           </image>
                        </ImageView>
                     </graphic>
                        </Button>
                        <Button fx:id="btnSalir1" onAction="#onActionBtnSalir1" prefWidth="160" styleClass="boton-menu" text="Cerrar sesión">
                            <VBox.margin><Insets top="30" /></VBox.margin>
                     <graphic>
                        <ImageView fitHeight="55.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../controller/Images/icons8-logout-50.png" />
                           </image>
                        </ImageView>
                     </graphic>
                        </Button>
                    </children>
                </VBox>

                <!-- Menú de admin -->
                <VBox fx:id="VBoxMenuAdmin" alignment="CENTER" prefHeight="600.0" prefWidth="200.0" styleClass="menu-lateral" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                    <padding><Insets top="40" /></padding>
                    <children>
                        <ImageView fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true" styleClass="icono-transparente">
                            <image><Image url="@../controller/Images/usuario.png" /></image>
                        </ImageView>
                        <Text fill="WHITE" text="Bienvenido administrador">
                            <font><Font size="15" /></font>
                            <VBox.margin><Insets bottom="20" top="8" /></VBox.margin>
                        </Text>
                        <Line endX="100" startX="0" />

                        <Button fx:id="BtnEditarPiso" onAction="#onActionBtnEditarPiso" prefWidth="180" styleClass="boton-menu" text="Editar Piso">
                            <VBox.margin><Insets top="10" /></VBox.margin>
                            <graphic>
                                <ImageView fitHeight="26" fitWidth="33" pickOnBounds="true" preserveRatio="true">
                                    <image><Image url="@../controller/Images/icons8-skyscrapers-50.png" /></image>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button fx:id="btnEditarUsuario" onAction="#onActionBtnEditarUsuario" prefWidth="180" styleClass="boton-menu" text="Editar Usuario">
                            <VBox.margin><Insets top="10" /></VBox.margin>
                            <graphic>
                                <ImageView fitHeight="22" fitWidth="25" pickOnBounds="true" preserveRatio="true">
                                    <image><Image url="@../controller/Images/icons8-account-settings-32.png" /></image>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button fx:id="btnRegisterAdminAccount" onAction="#onRegisterAdminAccount" prefWidth="180" styleClass="boton-menu" text="Agregar Cuenta">
                            <VBox.margin><Insets top="10" /></VBox.margin>
                            <graphic>
                                <ImageView fitHeight="28" fitWidth="22" pickOnBounds="true" preserveRatio="true">
                                    <image><Image url="@../controller/Images/icons8-add-user-female-32.png" /></image>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button fx:id="btnGestionReservas" onAction="#onGestionReservas" prefWidth="180" styleClass="boton-menu" text="Gestión de reservas">
                            <VBox.margin><Insets top="10" /></VBox.margin>
                            <graphic>
                                <ImageView fitHeight="18" fitWidth="18" pickOnBounds="true" preserveRatio="true">
                                    <image><Image url="@../controller/Images/icons8-event-accepted-50.png" /></image>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button fx:id="btnStatistics" onAction="#onStatistics" prefWidth="180" styleClass="boton-menu" text="Estadísticas">
                            <VBox.margin><Insets top="10" /></VBox.margin>
                            <graphic>
                                <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                                    <image><Image url="@../controller/Images/icons8-statistic-64.png" /></image>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button fx:id="btnMiniJuego" onAction="#onActionMiniJuego" prefWidth="180" styleClass="boton-menu" text="Mini Juego">
                            <VBox.margin><Insets top="10" /></VBox.margin>
                            <graphic>
                                <ImageView fitHeight="20" fitWidth="32" pickOnBounds="true" preserveRatio="true">
                                    <image><Image url="@../controller/Images/icons8-game-50.png" /></image>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button fx:id="btnSalir" onAction="#onActionBtnSalir" prefWidth="180" styleClass="boton-cerrar-sesion" text="Cerrar sesión">
                            <VBox.margin><Insets top="20" /></VBox.margin>
                            <graphic>
                                <ImageView fitHeight="20" fitWidth="43" pickOnBounds="true" preserveRatio="true">
                                    <image><Image url="@../controller/Images/icons8-logout-50.png" /></image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </VBox>

            </children>
        </AnchorPane>
    </left>

</BorderPane>
